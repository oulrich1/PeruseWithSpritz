<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    android:id="@+id/checkboxTextViewFrameLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A6ffffff">

    <!-- https://stackoverflow.com/questions/11285961/how-to-make-a-background-transparent-20-in-android -->


    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/recentPerusalItemTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="18dp"
        android:paddingBottom="14dp"
        android:paddingTop="4dp"
        android:textColor="@color/black"
        app:typeface="roboto_slab_regular"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/recentPerusalItemStateIndicator"
        android:layout_width="6dp"
        android:layout_height="fill_parent"
        android:layout_gravity="right"
        android:background="@color/blue"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textStyle="bold|normal"
        android:layout_marginLeft="18dp"
        android:paddingBottom="19dp"
        android:paddingTop="7dp" />

</FrameLayout>